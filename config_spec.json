{
  "eikon_api_key": "YOUR_EIKON_API_KEY_HERE",
  
  "database": {
    "database_type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "database": "lme_reporting",
    "user": "Yusuke",
    "password": ""
  },
  
  "news_collection": {
    "polling_interval_minutes": 5,
    "collection_period_hours": 24,
    "max_news_per_query": 50,
    "api_rate_limit_delay": 0.3,
    "query_interval": 1.0,
    "duplicate_check_days": 7,
    "lme_only_filter": false,
    
    "query_categories": {
      "lme_metals": [
        "LME copper",
        "LME aluminium", 
        "LME zinc",
        "LME lead",
        "LME nickel",
        "LME tin",
        "London Metal Exchange"
      ],
      "base_metals": [
        "copper price",
        "aluminium price",
        "zinc price", 
        "lead price",
        "nickel price",
        "tin price",
        "base metals",
        "industrial metals"
      ],
      "market_general": [
        "metal market",
        "commodity market",
        "mining industry",
        "smelter",
        "refinery",
        "metal inventory",
        "metal stockpile"
      ],
      "china_related": [
        "China copper",
        "China aluminium",
        "China metals",
        "Chinese demand",
        "China economy",
        "Shanghai metals"
      ],
      "supply_demand": [
        "metal production",
        "mining output", 
        "smelter production",
        "metal demand",
        "industrial demand",
        "construction demand"
      ],
      "market_disruption": [
        "mining strike",
        "smelter shutdown",
        "supply disruption",
        "trade war metals",
        "metal tariff",
        "export restrictions"
      ]
    },
    
    "lme_keywords": [
      "LME", "london metal exchange", "lme copper", "lme aluminium",
      "lme zinc", "lme lead", "lme nickel", "lme tin", "lme warehouse",
      "lme inventory", "lme stocks", "lme prices"
    ],
    
    "market_keywords": [
      "copper", "aluminium", "aluminum", "zinc", "lead", "nickel", "tin",
      "base metals", "industrial metals", "metal market", "commodity",
      "mining", "smelter", "refinery", "inventory", "stockpile",
      "production", "demand", "supply"
    ],
    
    "excluded_sources": [
      "SPAM_SOURCE", "SOCIAL_MEDIA", "BLOG", "FORUM"
    ],
    
    "priority_sources": [
      "REUTERS", "BLOOMBERG", "FASTMARKETS", "METAL BULLETIN",
      "S&P GLOBAL", "PLATTS", "MINING.COM", "ARGUS MEDIA"
    ]
  },
  
  "manual_entry": {
    "enable_manual_registration": true,
    "require_source": true,
    "require_publish_time": false,
    "default_source": "Manual Entry",
    "auto_extract_metals": true,
    "validation_rules": {
      "max_title_length": 500,
      "max_body_length": 10000,
      "required_fields": ["title", "body"]
    }
  },
  
  "ui_settings": {
    "news_per_page": 50,
    "auto_refresh_interval": 300,
    "show_refinitiv_badge": true,
    "show_manual_badge": true,
    "default_date_range_days": 7,
    "max_search_results": 1000
  },
  
  "logging": {
    "log_level": "INFO",
    "log_directory": "logs",
    "max_log_size_mb": 10,
    "backup_count": 5,
    "enable_debug": false
  },
  
  "performance": {
    "max_retries": 3,
    "retry_delay_seconds": 5,
    "timeout_seconds": 30,
    "batch_size": 100,
    "connection_pool_size": 5
  },
  
  "alerts": {
    "enable_error_alerts": true,
    "critical_error_threshold": 5,
    "collection_failure_threshold": 0.7,
    "low_collection_count_threshold": 5
  },
  
  "backup": {
    "enable_auto_backup": false,
    "backup_interval_days": 7,
    "backup_retention_days": 30,
    "backup_directory": "backups"
  },
  
  "gemini_integration": {
    "enable_ai_analysis": false,
    "api_key": "YOUR_GEMINI_API_KEY_HERE",
    "analysis_enabled": false,
    "sentiment_analysis": false,
    "summary_generation": false,
    "keyword_extraction": false,
    "batch_processing": true,
    "max_text_length": 5000
  },
  
  "migration": {
    "target_database": "sqlserver",
    "migration_planned": true,
    "preserve_ids": true,
    "backup_before_migration": true,
    "migration_batch_size": 1000
  }
}